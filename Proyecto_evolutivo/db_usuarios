let db_user = [],
    input_user = "mauko",
    input_pass = "1234",
    new_user = {};

class user {
  constructor(user, pass) {
    this.user = user;
    this.pass = pass;
    this.id = 0;
  }
  
  set_id() {
    for(let i = 0; i < db_user.length; i++){
      const user = db_user[i];
      user.id = i
    }
  }
}

function register(input_user, input_pass) {
  new_user = new user(input_user, input_pass);
  db_user.push(new_user);
  new_user.set_id()
}


register(input_user, input_pass)
register(input_user, input_pass)
register(input_user, input_pass)
register(input_user, input_pass)
register(input_user, input_pass)

console.log(db_user);


